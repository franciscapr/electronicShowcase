<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, autofocus: true, required: true, placeholder: "Enter your name" %>
  </div>

  <div>
    <%= form.label :code, style: "display: block" %>
    <%= form.text_field :code, autofocus: true, required: true, placeholder: "Enter your code" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, autofocus: true, required: true, placeholder: "Enter your description" %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, autofocus: true, required: true, min: 0, placeholder: "Enter your price" %>
  </div>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url, autofocus: true, required: true, pattern: "http?://.+", placeholder: "Enter your url" %>
  </div>

  <div>
    <%= form.label :publish_date, style: "display: block" %>
    <%= form.date_field :publish_date, autofocus: true, required: true, placeholder: "Enter your publish_date" %> 
  </div>

  <div>
    <%= form.label :published, style: "display: block" %>
    <%= form.check_box :published %>
  </div>

  <div>
    <%= form.submit "Crear un producto", class: "" %> 
  </div>
<% end %>
